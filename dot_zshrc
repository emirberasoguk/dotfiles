# sistem güncelleme komutu
sistem_guncelleme() {
    # Renk Tanımlamaları
    local GREEN='\033[1;32m'
    local RED='\033[1;31m'
    local NC='\033[0m' # No Color
    
    echo -e "${GREEN}[SYSTEM_INIT] >> Accessing Mainframe Update Sequence...${NC}"
    echo -e "${GREEN}[AUTH_CHECK]  >> Verifying Sudo Privileges...${NC}"
    sudo -v
    
    # Yardımcı Fonksiyon: Onay İsteme
    confirm_exec() {
        echo -n -e "${GREEN}[QUERY] >> Execute $1 protocol? [y/N]: ${NC}"
        read -q "choice"
        echo "" # Newline
        if [[ "$choice" == "y" || "$choice" == "Y" ]]; then
            return 0
        else
            echo -e "${RED}[SKIPPED] >> $1 aborted by user.${NC}"
            return 1
        fi
    }

    # 1. APT (Sistem)
    if confirm_exec "APT_CORE_UPDATE"; then
        echo -e "${GREEN}[EXEC] >> Synchronizing repositories...${NC}"
        sudo apt update
        echo -e "${GREEN}[EXEC] >> Calculating upgrade size...${NC}"
        # -y kaldırıldı, boyut görüp onay vereceksin
        sudo apt full-upgrade 
        sudo apt autoremove
        sudo apt clean
    fi

    # 2. Firmware
    if command -v fwupdmgr &> /dev/null; then
        if confirm_exec "FIRMWARE_CHECK"; then
             sudo fwupdmgr refresh --force
             sudo fwupdmgr get-updates
             sudo fwupdmgr update
        fi
    fi

    # 3. Kitty
    if [ -d "$HOME/.local/kitty.app" ]; then
        if confirm_exec "KITTY_TERMINAL_PATCH"; then
            echo -e "${GREEN}[CHECK] >> Checking for Kitty updates...${NC}"
            
            # Mevcut sürümü al
            local current_ver=$($HOME/.local/kitty.app/bin/kitty --version | awk '{print $2}')
            
            # En son sürümü GitHub'dan öğren
            local latest_url=$(curl -sI https://github.com/kovidgoyal/kitty/releases/latest | grep -i "location:" | tr -d '\r')
            local latest_ver=$(basename "$latest_url")
            latest_ver=${latest_ver#v} # 'v' önekinden kurtul

            if [[ "$current_ver" != "$latest_ver" ]]; then
                echo -e "${GREEN}[UPDATE] >> New version found: $latest_ver (Current: $current_ver)${NC}"
                echo -e "${GREEN}[EXEC] >> Downloading and installing...${NC}"
                curl -L https://sw.kovidgoyal.net/kitty/installer.sh | sh /dev/stdin launch=n
                echo -e "${GREEN}[INFO] >> Updated to version: $(${HOME}/.local/kitty.app/bin/kitty --version)${NC}"
            else
                echo -e "${GREEN}[INFO] >> Kitty is already up to date ($current_ver).${NC}"
            fi
        fi
    fi

    # 4. NPM Global
    if confirm_exec "NPM_MODULES_UPDATE"; then
        echo -e "${GREEN}[EXEC] >> Updating global node modules...${NC}"
        sudo npm update -g
    fi

    # 5. Cargo (Rust)
    if command -v cargo &> /dev/null; then
        if confirm_exec "RUST_CARGO_CRATES"; then
            if ! command -v cargo-install-update &> /dev/null; then
                echo -e "${GREEN}[INSTALL] >> Installing cargo-update utility...${NC}"
                cargo install cargo-update
            fi
            cargo install-update -a
        fi
    fi

    # 6. Flatpak & Snap
    if command -v flatpak &> /dev/null; then
        if confirm_exec "FLATPAK_APPS"; then
            echo -e "${GREEN}[EXEC] >> Updating Flatpak applications...${NC}"
            flatpak update -y
            echo -e "${GREEN}[CLEAN] >> Removing unused Flatpak runtimes...${NC}"
            flatpak uninstall --unused -y
        fi
    fi
    
    if command -v snap &> /dev/null; then
        if confirm_exec "SNAP_PACKAGES"; then
             echo -e "${GREEN}[EXEC] >> Refreshing Snap packages...${NC}"
             sudo snap refresh
        fi
    fi

    # 7. Oh My Zsh
    if [ -d "$HOME/.oh-my-zsh" ]; then
        if confirm_exec "OH_MY_ZSH_UPDATE"; then
             echo -e "${GREEN}[EXEC] >> Updating Oh My Zsh...${NC}"
             $ZSH/tools/upgrade.sh
        fi
    fi

    # 8. System Cleanup
    if confirm_exec "SYSTEM_CLEANUP"; then
        echo -e "${GREEN}[CLEAN] >> Vacuuming Systemd Journals (keeping last 7 days)...${NC}"
        sudo journalctl --vacuum-time=7d
        
        echo -e "${GREEN}[CLEAN] >> Clearing Thumbnail Cache...${NC}"
        rm -rf ~/.cache/thumbnails/*
    fi

    echo -e "${GREEN}[SYSTEM_HALT] >> Update sequence completed. System is optimized.${NC}"
}
export PATH="$HOME/.npm-global/bin:$PATH"
# === Özel Dosya Okuyucu (PDF, DOCX, Code) ===
oku() {
    if [ -z "$1" ]; then
        echo "Kullanım: oku <dosya>"
        return 1
    fi

    local filename="$1"
    local ext="${filename##*.}"
    ext=$(echo "$ext" | tr '[:upper:]' '[:lower:]') # Uzantıyı küçült

    case "$ext" in
        pdf)
            # PDF'i metne dök ve less ile aç
            pdftotext -layout "$filename" - | less
            ;;
        docx)
            # Docx'i metne dök
            docx2txt "$filename" - | less
            ;;
        doc)
            # Eski Word dosyası
            if command -v antiword &> /dev/null; then
                antiword "$filename" | less
            else
                echo "Hata: 'antiword' yüklü değil."
            fi
            ;;
        *)
            # Diğer her şey (C, Py, Java vs.) için standart less
            # Veya syntax highlighting için 'bat' varsa 'bat' kullanır
            if command -v batcat &> /dev/null; then
                batcat "$filename"
            else
                less "$filename"
            fi
            ;;
    esac
}
